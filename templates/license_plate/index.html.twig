{% extends 'base.html.twig' %}

{% block title %}LicensePlate index{% endblock %}

{% block body %}
    <div class="d-flex align-items-center justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Bordered Table</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th style="width: 10px">#</th>
                            <th>License plate</th>
                            <th>Status</th>
                            <th style="width: 40px">Options</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for license_plate in license_plates %}
                        <tr>
                            <td>{{ license_plate.id}}</td>
                            <td>{{ license_plate.licensePlate }}</td>
                            <td>
                                TODO: add status
                            </td>
                            <td>
                                <a class="badge bg-warning" href="{{ path('license_plate_edit', {'id': license_plate.id}) }}">edit</a>
                                <a class="badge bg-danger" href="{{ path('license_plate_delete', {'id': license_plate.id}) }}">delete</a>
                            </td>
                        </tr>
                        {% else %}
                            <tr>
                            <td colspan="3">You don't have any cars added yet.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
                <div class="card-footer clearfix">
                    <a href="{{ path('license_plate_new') }}">Add a new license plate</a>
                </div>
            </div>
            <a href="{{ path('home') }}">Return to home</a>
        </div>
    </div>
{% endblock %}
